property source ${streams:map("target/nukleus-itests/source/streams/echo", 1024 * 1024)}
property nukleus ${streams:map("target/nukleus-itests/echo/streams/source", 1024 * 1024)}

property newClientStreamId ${streams:newClientStreamId()}
property newSourceRef ${streams:newReferenceId()}

connect await BOUND
        agrona://stream/bidirectional
        option reader ${agrona:manyToOneReader(source.buffer)}
        option writer ${agrona:manyToOneWriter(nukleus.buffer)}
connected

write [0x00 0x00 0x00 0x01]
write ${newClientStreamId}
write ${newSourceRef}
write flush

read [0x00 0x00 0x00 0x01]
read ([0..8]:serverStreamId)
read ${newClientStreamId}

close
closed
